{# twig template #}
{% extends 'templates/email.html.twig' %}


{% block emailBody %}

    <div class="row body-row">
        <div class="col-lg-12">
            <p>Greetings,</p>
            <p>
                New automatic recharge settings have been applied to your {{ constant('APP_NAME', ewebify) }} account. Your primary payment profile will automatically charged to ${{ maxBalance }} whenever your balance drops below ${{ minBalance }}.
            </p>

            <p>If you did not initiate this change to your account, please <a href="mailto:{{ constant('CUST_SUPP_EMAIL', ewebify) }}">notify us</a> immediately.</p>

            <p>Thank you,</p>
            <p>The PapaLocal Team
                <br/>
                <a href="tel:{{ constant('CUST_SUPP_PHONE', ewebify) }}">{{ constant('CUST_SUPP_PHONE', ewebify) }}</a>
            </p>

        </div>
    </div>

{% endblock %}