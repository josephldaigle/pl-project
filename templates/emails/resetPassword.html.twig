{# twig template #}
{% extends 'templates/email.html.twig' %}

{% block emailBody %}

    <div class="row body-row">
        <div class="col-lg-12">
            <h2 style="text-align: center;">Reset Password</h2>
            <br/>
            <p>Greetings,</p>
            <p>
                This email contains your access token to reset your password.
                <strong>The link is only active for 30 minutes.</strong>
            </p>

            <p class="text-center">
                <a href="{{ url | raw }}" class="clear-text-decoration">
                    <button class="button-primary">Reset Password</button>
                </a>
            </p>
            <p>If the button does not work, copy and paste this link into your browser's address bar: {{ url | raw }}</p>

            <p>
                If you did not request a password reset, please <a href="mailto:{{ constant('CUST_SUPP_EMAIL', ewebify) }}">let us know.</a>
            </p>
            <br/>
            <p>
                Thank you,
            </p>

            <p>
                The PapaLocal Team
                <br/><a href="tel:{{ constant('CUST_SUPP_PHONE', ewebify) }}">{{ constant('CUST_SUPP_PHONE', ewebify) }}</a>
            </p>

        </div>
    </div>

{% endblock %}