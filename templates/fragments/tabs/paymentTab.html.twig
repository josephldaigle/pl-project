<div id="paymentPanel" role="tabpanel" class="apply-border clear-top-bottom-border tab-pane contour-inner-small secondary-background col-xs-12">

    {% if app.user.getBillingProfile().getPaymentProfile() is not null and app.user.getBillingProfile().getPaymentProfile().count() > 0 %}
        
        <div class="col-xs-12 clear-side-padding">

            {% include 'fragments/billing/funds.html.twig' %}

        </div>

    {% endif %}

    <div class="col-xs-12 clear-side-padding">
        {% include 'fragments/billing/manageCreditCards.html.twig' %}
    </div>

    <div class="col-xs-12 clear-side-padding">
        {% if app.user.billingProfile.availableBalance is not null and app.user.billingProfile.availableBalance > 0 %}
            {% include 'fragments/billing/fundsWithdrawal.html.twig' %}
        {% endif %}
    </div>

</div>


