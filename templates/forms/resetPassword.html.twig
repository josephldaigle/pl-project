{% extends 'templates/onPageContainer.html.twig' %}

{% block header %}Reset Password{% endblock %}

{% block content %}

    <form action="{{ path('process_password_reset') }}" name="resetPassword" method="post" data-form-type="standard">

        {# VALIDATION ERRORS #}
        {% if errors is defined and errors is not empty %}

            <div class="col-sm-12">
                <div class="alert alert-danger" role="alert">
                    {% for error in errors %}

                        <p>{{ error.getMessage() }}</p>

                    {% endfor %}
                </div>
            </div>

        {% endif %}

        {#FORM ELEMENTS#}
        <div class="col-sm-12">
            <div class="form-group">
                <input type="password" name="password" class="form-control clear-border-radius" placeholder="Enter Password" minlength="8" maxlength="150" required>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-group">
                <input type="password" name="confirmPassword" class="form-control clear-border-radius" placeholder="Confirm Password" required>
            </div>
        </div>

        {# PASSWORD REQUIREMENTS #}
        <div class="col-sm-12">
            <div class="form-group">
                <a href="#password-rules" data-toggle="modal" class="secondary-color">Password Requirements</a>
            </div>
        </div>

        {#SUBMIT BUTTON#}
        <div class="col-sm-12">
            <div class="form-group">
                <div class="text-center">
                    <button type="submit" class="button-primary clear-border-radius form-control">Submit</button>
                </div>
            </div>
        </div>
        <input type="hidden" name="username" value="{{ username }}" />
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('resetPassword') }}" />
    </form>

{% endblock %}

