{% extends 'templates/modalContainer.html.twig' %}

{% block header %}New Referral{% endblock %}

{% block id %}addNewReferral{% endblock %}

{% block content %}

    <form name="addReferral" data-url="referral/add" data-form-type="modal">

        <div class="col-xs-12">
            {% include 'fragments/alerts/formAlert.html.twig' %}
        </div>

        {% include 'fragments/formFields/addReferral/newReferralInformation.html.twig' %}
        {% include 'fragments/formFields/addReferral/newReferralSend.html.twig' %}

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <input type="submit" name="submit" value="Submit Referral" class="form-control button-primary clear-border-radius" data-toggle="modal" />
            </div>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('addReferral') }}" />

    </form> <!--end form-->


{% endblock %}


